<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>jrecaptcha v2 Sample</display-name>
	
	<servlet>
		<servlet-name>sample</servlet-name>
		<servlet-class>com.tenxdev.SampleServlet</servlet-class>
		<init-param>
			<param-name>site-key</param-name>
			<param-value>your-site-key</param-value>
		</init-param>
		<init-param>
			<param-name>secret-key</param-name>
			<param-value>your-secret-key</param-value>
		</init-param>
		
	</servlet>
	
	<servlet-mapping>
		<servlet-name>sample</servlet-name>
		<url-pattern>/check</url-pattern>
	</servlet-mapping>
	
</web-app>